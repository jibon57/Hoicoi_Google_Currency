<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade">
  <name>Hoicoi Google Currency</name>
  <creationDate>26-Mar-2015</creationDate>
  <author>Jibon Costa</author>
  <authorEmail>jiboncosta57@gmail.com</authorEmail>
  <authorUrl>http://extensions.hoicoimasti.com/</authorUrl>
  <copyright/>
  <license>GPL 2 or later</license>
  <version>1.6</version>
  <description>Convert Currency using Google Currency Coveter</description>
  <files folder="site">
    <folder>assets</folder>
	<folder>tmpl</folder>
    <filename>simple_html_dom.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename module="mod_hoicoigooglecurrency">mod_hoicoigooglecurrency.php</filename>
  </files>
  <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="amount"
					type="text"
					default="1"
					label="Default amount"
					description="Default amount" />
					
				<field
					name="from"
					type="text"
					default="USD"
					label="Default From"
					description="Default currency from" />
				
				<field
					name="to"
					type="text"
					default="BDT"
					label="Default to"
					description="Default currency to" />
				
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
					
			</fieldset>
		</fields>
	</config>
</extension>
